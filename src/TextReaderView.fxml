<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TextReaderController">
   <children>
      <TextField fx:id="txtReadField" alignment="TOP_LEFT" layoutX="123.0" layoutY="61.0" prefHeight="304.0" prefWidth="391.0" promptText="Enter Text Here" />

      <Button layoutX="530.0" layoutY="58.0" mnemonicParsing="false" onAction="#onTextAddClick" prefHeight="26.0" prefWidth="56.0" text="Add" />
      <Button fx:id="wordListButton" layoutX="14.0" layoutY="185.0" mnemonicParsing="false" onAction="#onWordListClick" prefHeight="30.0" prefWidth="74.0" text="Word List" />
      <Button fx:id="addWordButton" layoutX="14.0" layoutY="246.0" mnemonicParsing="false" onAction="#onTextReadClick" prefHeight="30.0" prefWidth="74.0" text="Add Word" />
      <Button fx:id="flashcardButton" layoutX="14.0" layoutY="127.0" mnemonicParsing="false" onAction="#onFlashcardClick" prefHeight="30.0" prefWidth="74.0" text="Quiz" />
      <ComboBox fx:id="wordListCBox" layoutX="123.0" layoutY="32.0" prefHeight="26.0" prefWidth="90.0" />
      <Label layoutX="123.0" layoutY="14.0" text="List:" />
      <Button fx:id="createButton" layoutX="530.0" layoutY="338.0" mnemonicParsing="false" onAction="#onCreateListClick" prefHeight="26.0" prefWidth="56.0" text="Create" />
   </children>
</AnchorPane>
