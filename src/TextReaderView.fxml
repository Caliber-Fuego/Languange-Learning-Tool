<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TextReaderController">
   <children>
      <TextField fx:id="txtReadField" alignment="TOP_LEFT" layoutX="123.0" layoutY="35.0" prefHeight="330.0" prefWidth="391.0" promptText="Enter Text Here" />

      <Button layoutX="530.0" layoutY="35.0" mnemonicParsing="false" onAction="#onTextAddClick" prefHeight="26.0" prefWidth="56.0" text="Add" />
      <Button fx:id="wordListButton" layoutX="14.0" layoutY="185.0" mnemonicParsing="false" onAction="#onWordListClick" prefHeight="30.0" prefWidth="74.0" text="Word List" />
      <Button fx:id="addWordButton" layoutX="14.0" layoutY="259.0" mnemonicParsing="false" onAction="#onTextReadClick" prefHeight="30.0" prefWidth="74.0" text="Add Word" />
      <Button fx:id="flashcardButton" layoutX="14.0" layoutY="127.0" mnemonicParsing="false" onAction="#onFlashcardClick" prefHeight="30.0" prefWidth="74.0" text="Quiz" />
   </children>
</AnchorPane>
